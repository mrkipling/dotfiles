# niceness provided by gnome-settings-daemon (volume keys, etc.)
exec --no-startup-id gnome-settings-daemon

# multiple monitors with correct orientation
# you might want to comment this out if you're only using one monitor!
#exec --no-startup-id xrandr --output DVI-1 --auto --right-of DVI-0

# blank monitor(s) after 5 minutes
exec --no-startup-id xset dpms 0 0 300

# auto-lock computer after 6 minutes
exec --no-startup-id xautolock -detectsleep -time 6 -locker i3lock

# set backlight
exec --no-startup-id xbacklight -set 30

# disable caps lock
exec --no-startup-id xmodmap ~/.xmodmap

# start network manager applet
exec --no-startup-id nm-applet &

# hide the mouse cursor after 1 second of inactivity
exec --no-startup-id unclutter -display :0 -root -idle 1 &

# set wallpaper (requires feh to be installed)
